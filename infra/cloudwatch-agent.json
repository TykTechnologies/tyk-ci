{
  "agent": {
    "run_as_user": "root"
  },
  "logs": {
    "logs_collected": {
      "files": {
	"collect_list": [
	  {
	    "file_path": "/var/log/messages",
	    "log_group_class": "STANDARD",
	    "log_group_name": "bastion",
	    "log_stream_name": "messages {instance_id}",
	    "retention_in_days": 3
	  },
	  {
	    "file_path": "/var/log/secure",
	    "log_group_class": "STANDARD",
	    "log_group_name": "bastion",
	    "log_stream_name": "secure {instance_id}",
	    "retention_in_days": 3
	  }
	]
      }
    }
  }
}
